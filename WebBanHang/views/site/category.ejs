<% include layout/header.ejs %>

<div id="maincontainer">
  <section id="product">
    <div class="container">
     <!--  breadcrumb -->  
      <ul class="breadcrumb">
        <li>
          <a href="#">Home</a>
          <span class="divider">/</span>
        </li>
        <li class="active">Category</li>
      </ul>
      <div class="row">        
        <!-- Sidebar Start-->
        <aside class="span3">
         <!-- Category-->  
          <div class="sidewidt">
            <h2 class="heading2"><span>Thương hiệu</span></h2>
            <ul class="nav nav-list categories">
              <% brands.forEach(function(bra){ %>
                <li>
                  <a href="/thuong-hieu/<%= bra.name %>.<%= bra.id%>.html" ><%= bra.name%></a>
                </li>
              <%})%>
              <!-- <li>> HP</li>
              <li>> DELL</li>
              <li>> ASUS</li>
              <li>> ACER</li>
              <li>> LENOVO</li> -->
            </ul>
            <h2 class="heading2"><span>Mức Giá</span></h2> 
            <ul>
              <li>
                <a href="/danh-muc/loc-muc-gia.<%= products[0].categoryId%>/2.10.html">>> dưới 10.000.000</a>
              </li>
              <li>
                <a href="/danh-muc/loc-muc-gia.<%= products[0].categoryId%>/10.20.html">>> 10.000.000 - 20.000.000</a>
              </li>
              <li>
                <a href="/danh-muc/loc-muc-gia.<%= products[0].categoryId%>/20.35.html">>> 20.000.000 - 35.000.000</a>
              </li>
              <li>
                <a href="/danh-muc/loc-muc-gia.<%= products[0].categoryId%>/35.100.html">>> trên 35.000.000</a>
              </li>
            </ul>
          </div>
         <!--  Best Seller -->  
       
          <!-- Latest Product -->  
          
          <!--  Must have -->  
         
        </aside>
        <!-- Sidebar End-->
        <!-- Category-->
        <div class="span9">          
          <!-- Category Products-->
          <section id="category">
            <div class="row">
              <div class="span9">
              <!-- Category-->
                <section id="categorygrid">
                  <ul class="thumbnails grid">
                    <% products.forEach(function(pro){  %>
                        <li class="span3">                        
                        <div class="thumbnail">
                          <% if(pro.sale > 0) { %>
                            <span class="tooltip-test" style="background-color: red; color: white; font-size: 20px; z-index: 1000; position: absolute; top: 0; left: 0; padding: 6px 10px;">-<%= pro.sale %>%</span>
                          <% } %>
                          <a href="/san-pham/<%= pro.urlRewriteName%>.<%= pro.id%>.<%= pro.categoryId%>.html"><img alt="" src="upload/<%= pro.photo %>" style="font-size:10px ; height : 300px ;"></a>
                          <div class="pricetag" style="background:white;">
                            <span class="spiral"style="display:none" ></span><a href="/add-cart.<%= pro.id %>" class="productcart" style="display:none">ADD TO CART</a>
                            <a class="prdocutname" href="product.html" style="color:black ;font-size: 16px ;"><%= pro.name %></a>
                            <div class="price">
                            <!-- parseInt(x).toLocaleString('en-us') cho số tiền có dấu phẩy-->
                              <% if(pro.sale > 0) { %>
                              <div class="pricenew" style="color:red ;float: right; "><%= parseInt(pro.salePrice).toLocaleString('en-us') %> <p style="color:red ;float:right;">đ</p></div>
                              <div class="pricenew" style="color:black ;float: right; text-decoration: line-through; margin-right: 18px"><%= parseInt(pro.price).toLocaleString('en-us') %><p style="color:black  ;float: right;">đ</p></div>
                              <% } else { %>
                               <div class="pricenew" style="color:black ;"><%= parseInt(pro.price).toLocaleString('en-us') %>
                               <p style="color:black  ;float: right;">đ</p></div>
                              <% } %>
                            </div>
                          </div>
                        </div>
                      </li>
                    <% })%>
                  </ul>
                  <div class="pagination pull-right">
                    <ul></ul>
                  </div>
                </section>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </section>
</div>

<!-- Footer -->
<% include layout/footer.ejs %>
